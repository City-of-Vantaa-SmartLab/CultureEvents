{
  "name": "culture-events",
  "version": "0.0.0",
  "description": "PWA app to make reservations for culture events for Vantaa city",
  "author": "",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "db:start": "docker run --rm --name culture-events-database -p 5432:5432 -e POSTGRES_PASSWORD=password -e POSTGRES_USER=postgres -d postgres",
    "db:stop": "docker kill culture-events-database",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "dev": "./node_modules/.bin/nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/src/main.js",
    "start:hmr": "node dist/server",
    "test": ". ./e2e-tests.sh",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --runInBand --forceExit --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/microservices": "^5.0.0",
    "@nestjs/passport": "^1.0.11",
    "@nestjs/testing": "^5.0.0",
    "@nestjs/typeorm": "^5.0.0",
    "@nestjs/websockets": "^5.0.0",
    "@types/superagent": "^4.1.15",
    "awesome-phonenumber": "^2.2.6",
    "aws-sdk": "^2.268.1",
    "axios": "^0.18.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.5",
    "date-fns-timezone": "^0.1.4",
    "interpolate": "^0.1.0",
    "joi": "^13.6.0",
    "multer": "^1.4.4",
    "multer-s3": "^2.10.0",
    "multer-sharp-s3": "^0.2.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.1",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typeorm": "^0.2.7",
    "typescript": "^4.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/joi": "^13.4.4",
    "@types/multer": "^1.3.7",
    "@types/node": "^16.11.38",
    "@types/supertest": "^2.0.11",
    "dotenv": "^6.0.0",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
